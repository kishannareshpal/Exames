<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_exames"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kishan.exames.ExamesActivity"
    android:background="@drawable/sixth_b"

    fancy:corner_radius="6dp">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btGetBackTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="22dp"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:transitionName="transExames"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/white"
        fancy:fb_focusColor="@color/lightish_grey"
        fancy:fb_fontIconResource="&#xf060;"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="22dp"
        fancy:fb_text="voltar"
        fancy:fb_textColor="@color/greyish_green"
        fancy:fb_textSize="18sp"
    />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:text="selecione a classe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvClasse"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false"
                />

            <Spinner
                android:id="@+id/spClasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp" />

            <TextView
                android:text="@string/SubjectHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDisciplina"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic" />

            <Spinner
                android:id="@+id/spDisciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:spinnerMode="dialog" />

            <TextView
                android:text="@string/YearHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvAno"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic" />

            <Spinner
                android:id="@+id/spAno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvEpoca"
                android:textColor="@color/white"
                android:text="@string/EpocaHint"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false" />

            <Spinner
                android:id="@+id/spEpoca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="false"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="30dp"
                    android:paddingTop="7dp"
                    android:text="â€¢ info"
                    android:textColor="@color/white"
                    android:textStyle="normal|italic"
                    android:layout_weight="0.45" />

                <Space
                    android:layout_height="wrap_content"
                    android:layout_weight="0.97"
                    android:layout_width="wrap_content" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/bDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:paddingBottom="9dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="9dp"
                    fancy:fb_defaultColor="@color/download_buton"
                    fancy:fb_focusColor="#eaeaea"
                    fancy:fb_radius="8dp"
                    fancy:fb_text="@string/DownloadButton"
                    fancy:fb_textColor="#000000"
                    fancy:fb_textSize="14sp">

                </mehdi.sakout.fancybuttons.FancyButton>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/bLook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:addStatesFromChildren="false"
                    android:animateLayoutChanges="false"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="9dp"
                    fancy:fb_defaultColor="#232323"
                    fancy:fb_focusColor="#2e090e"
                    fancy:fb_radius="8dp"
                    fancy:fb_text="@string/Look"
                    fancy:fb_textColor="@color/white"
                    fancy:fb_textSize="14sp" />



            </LinearLayout>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                fancy:adSize="BANNER"
                fancy:adUnitId="@string/banner_adId" />

        </LinearLayout>

    </LinearLayout>

    <!--<TextView-->
        <!--android:text="feedback"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/tvFeedback"-->
        <!--android:textColor="@color/forMedia"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

</com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
