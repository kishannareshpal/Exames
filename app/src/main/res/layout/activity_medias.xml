<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_medias"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kishan.exames.MediasActivity"
    android:background="@color/black">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/tvQ2"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btDez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="9dp"
                    android:layout_weight="1"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/forAbout"
                    fancy:fb_focusColor="#4d5460"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="7dp"
                    fancy:fb_textSize="14sp"
                    fancy:fb_text="@string/Media10a"
                    fancy:fb_textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btDoze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="9dp"
                    android:layout_weight="1"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/forAbout"
                    fancy:fb_focusColor="#4d5460"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="7dp"
                    fancy:fb_textSize="14sp"
                    fancy:fb_text="@string/Media12a"
                    fancy:fb_textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
