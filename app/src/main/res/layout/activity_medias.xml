<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_medias"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kishan.exames.MediasActivity"
    android:background="@color/black">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="@string/tvQ2"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:text="@string/Media10a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btDez"
                    android:layout_weight="1"
                    android:textStyle="normal|bold|italic"
                    android:backgroundTint="@color/forAbout"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

                <Button
                    android:text="@string/Media12a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btDoze"
                    android:layout_weight="1"
                    android:textStyle="normal|bold|italic"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/forAbout"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
