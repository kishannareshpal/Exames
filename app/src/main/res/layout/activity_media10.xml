<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_media10"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kishan.exames.media10Activity"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ln1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="12sp"
            android:textStyle="normal|bold|italic"
            android:text="a sua média final da 10a Classe é:"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult10"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/very_light_grey"
            tools:text="--"
            android:text="--"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            android:id="@+id/ln2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="@color/very_light_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hindMedia8"
                    android:textStyle="normal|bold|italic"
                    android:textColor="@color/white"
                    android:maxLength="2"
                    android:textColorLink="@color/skinny_blue"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:id="@+id/et8a10"
                    android:inputType="number"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/very_light_grey">

                <EditText
                    android:layout_height="match_parent"
                    android:hint="@string/hindMedia9"
                    android:textStyle="normal|bold|italic"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:id="@+id/et9a10"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:textColorLink="@color/skinny_blue"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:textAllCaps="false" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/very_light_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hindMedia10"
                    android:id="@+id/et10a10"
                    android:textStyle="normal|bold|italic"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:textColorLink="@color/skinny_blue"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="right">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btCalculate10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="9dp"
                    android:layout_weight="1"
                    fancy:fb_defaultColor="@color/dark_grey"
                    fancy:fb_focusColor="#303030"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="20dp"
                    fancy:fb_textSize="14sp"
                    fancy:fb_text="Calcular >"
                    fancy:fb_textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
