<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_exames"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kishan.exames.ExamesActivity"
    android:background="@color/dark_grey">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:text="selecione a classe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvClasse"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spClasse"
                android:background="@color/white" />

            <TextView
                android:text="@string/YearHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvAno"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spAno"
                android:background="@color/white" />

            <TextView
                android:text="@string/SubjectHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDisciplina"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spDisciplina"
                android:spinnerMode="dialog"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvEpoca"
                android:textColor="@color/white"
                android:text="@string/EpocaHint"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spEpoca"
                android:background="@color/white" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <Button
                    android:text="@string/DownloadButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bDownload"
                    android:layout_weight="1" />

                <Button
                    android:text="@string/Look"
                    android:layout_height="wrap_content"
                    android:id="@+id/bLook"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/light_red"
                    android:layout_weight="1"
                    android:layout_width="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
