<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_exames"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kishan.exames.ExamesActivity"
    android:background="@color/dark_grey">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:text="selecione a classe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvClasse"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spClasse"
                android:background="@color/white" />

            <TextView
                android:text="@string/YearHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvAno"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spAno"
                android:background="@color/white" />

            <TextView
                android:text="@string/SubjectHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDisciplina"
                android:textColor="@color/white"
                android:textStyle="normal|bold|italic" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spDisciplina"
                android:spinnerMode="dialog"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvEpoca"
                android:textColor="@color/white"
                android:text="@string/EpocaHint"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spEpoca"
                android:background="@color/white" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="7dp">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/bDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="9dp"
                    fancy:fb_defaultColor="#c9c9c9"
                    fancy:fb_focusColor="#eaeaea"
                    fancy:fb_radius="8dp"
                    fancy:fb_text="@string/DownloadButton"
                    fancy:fb_textColor="#000000"
                    fancy:fb_textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp" >

                </mehdi.sakout.fancybuttons.FancyButton>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/bLook"
                    android:paddingBottom="9dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="9dp"
                    fancy:fb_defaultColor="#fc324a"
                    fancy:fb_focusColor="#fd5065"
                    fancy:fb_radius="8dp"
                    fancy:fb_textColor="#000000"
                    fancy:fb_text="@string/Look"
                    fancy:fb_textSize="14sp"
                    android:animateLayoutChanges="false"
                    android:layout_height="match_parent"
                    android:addStatesFromChildren="false"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center" />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInfo"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textStyle="normal|italic" />

    <!--<TextView-->
        <!--android:text="feedback"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/tvFeedback"-->
        <!--android:textColor="@color/forMedia"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

</RelativeLayout>
